#!/usr/bin/env bash
# File generated by pre-commit: https://pre-commit.com
# ID: 138fd403232d2ddd5efb44317e38bf03

# start templated
ARGS=(hook-impl --config=.pre-commit-config.yaml --hook-type=pre-commit)
# end templated

HERE="$(cd "$(dirname "$0")" && pwd)"
REPO_ROOT="$(git rev-parse --show-toplevel 2>/dev/null || echo "$HERE/..")"
export PRE_COMMIT_HOME="${PRE_COMMIT_HOME:-$REPO_ROOT/.git/pre-commit-cache}"
export PRE_COMMIT_ALLOW_NO_PTY=1
mkdir -p "$PRE_COMMIT_HOME"
ARGS+=(--hook-dir "$HERE" -- "$@")

exec /run/current-system/sw/bin/pre-commit "${ARGS[@]}"
